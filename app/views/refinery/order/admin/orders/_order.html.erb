<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order) -%>">
  <span class='title'>
    <%= order.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.order_order_path(order), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_order_admin_order_path(order), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.order_admin_order_path(order), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: order.title)}}  ) %>
  </span>
</li>
